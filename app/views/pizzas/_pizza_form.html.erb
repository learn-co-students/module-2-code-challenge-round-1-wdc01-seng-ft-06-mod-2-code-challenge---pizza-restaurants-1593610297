<% if @pizza.errors.any? %>
<%= "You can't make that pizza for #{pluralize(@pizza.errors.count, "reason")}:" %>
<% end %>

<ul>
<% @pizza.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul><br>

<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %>
<%= f.label :restaurant_ids, "Restaurant" %>
<%= f.collection_select :restaurant_ids, Restaurant.all, :id, :name %>
<%= f.submit %>
<% end %>

