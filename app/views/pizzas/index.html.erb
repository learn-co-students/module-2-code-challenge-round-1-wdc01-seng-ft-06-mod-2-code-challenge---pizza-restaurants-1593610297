<h1 style='margin-top:100px;font-size:2rem'>Our official pizza directory</h1>

<table>
   <tr>
      <td># of Stores Carried</td>
      <td>Name</td>
      <td>Ingredients</td>    
    </tr>
<% @pizzas.each do |pizza| %>
 <tr>
    <td><%=pizza.restaurant_count%></td>
    <td><h1 style='font-size:1.5rem;margin-top:3%'><%= link_to pizza.name, pizza_path(pizza) %></h1></td>
    <td><%= pizza.ingredients %></td>  
 </tr>
<% end %>
</table>
