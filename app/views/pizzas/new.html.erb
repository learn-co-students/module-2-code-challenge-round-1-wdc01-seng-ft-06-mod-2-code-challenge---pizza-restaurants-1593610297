<h1>New Pizza Form</h1>

<% if @pizza.errors %>
    <ul>
        <% @pizza.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul><br>
<% end %>

<%= form_for @pizza do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>

    <%= f.collection_select :restaurant_name, Restaurant.all, :id, :name %>

    <%= f.submit "Save Pizza"%>
<% end %>