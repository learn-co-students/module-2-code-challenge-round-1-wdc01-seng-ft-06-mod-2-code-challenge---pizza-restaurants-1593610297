<h1>Editing <%= @restaurant.name %></h1>

<% if @restaurant.errors.any? %>
    <h2>Errors</h2>
    <% @restaurant.errors.messages.each do |key, message| %>
        <%= "#{key} -- #{message}" %><br />
    <% end %>
<% end %>

<%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br />
    <%= f.label :address %>
    <%= f.text_area :address %><br />
    <%= f.label :pizzas %>
    <%= f.collection_check_boxes :pizza_ids, Pizza.all, :id, :name %>
    <%= f.submit %>
<% end %>