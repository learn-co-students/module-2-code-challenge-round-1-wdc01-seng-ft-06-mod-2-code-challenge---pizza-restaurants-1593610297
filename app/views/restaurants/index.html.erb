<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
<br>
<div id="actions">
  <%= link_to "View All Pizzas", pizzas_path %><br>
  <%= link_to "Build a New Restaurant", new_restaurant_path %>
</div>
